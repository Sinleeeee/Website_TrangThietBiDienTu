@model ThietBiDienTu.Areas.Admin.Models.DanhMuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="card-header bg-danger text-white">
        <h4>Bạn có chắc chắn muốn xóa không ?</h4>
    </div>
    <br />
    <p>
        @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-outline-primary btn-fw mdi mdi-backburger" })
    </p>

    <div class="card mb-3">
        <div class="card-header">
            <h4 class="card-title">Xóa danh mục</h4>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label class="col-sm-3 col-md-6">Danh mục:</label>
                <div class="">
                    <p class="form-control">@Html.DisplayFor(model => model.TenDanhMuc)</p>
                </div>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="text-center mt-4">
                        <input type="submit" value="Xóa" class="btn btn-outline-danger btn-fw mdi mdi-delete-forever " onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');" />
                    </div>
                }
            </div>
        </div>
    </div>

