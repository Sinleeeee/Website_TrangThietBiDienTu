<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>DaHuy</title>

</head>
<body>

    <div class="container mt-4">
        <h2 style="text-align: center; margin-bottom: 20px;">Danh sách Đơn Đặt Hàng đã hủy</h2>
        <hr />

        <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px; border: 1px solid #dee2e6;">
            <thead style="background-color: #f8f9fa;">
                <tr>
                    <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Ngày đặt</th>
                    <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Mã đơn</th>
                    <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Lý do</th>
                    <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">Tên người hủy</th>
                    <th style="border: 1px solid #dee2e6; padding: 8px; text-align: center;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">@Html.DisplayFor(modelItem => item.NgayHuy)</td>
                        <td style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">@Html.DisplayFor(modelItem => item.MaDDH)</td>
                        <td style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">@Html.DisplayFor(modelItem => item.LyDonHuy)</td>

                        <td style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">@item.TenKH | @item.TenKH</td>

                        <td style="border: 1px solid #dee2e6; padding: 8px; text-align: center;">
                            @Html.ActionLink("Xem đơn đã hủy", "CTDaHuy", new { idDDH = item.MaDDH }, new { @class = "btn btn-info btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

