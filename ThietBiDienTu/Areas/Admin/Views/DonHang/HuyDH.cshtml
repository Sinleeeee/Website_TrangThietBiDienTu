

@model ThietBiDienTu.Areas.Admin.Models.HuyHang
@{
    ViewBag.Title = "HuyDH";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .cancel-order-form-container {
        max-width: 400px;
        width: 100%;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .cancel-order-form-container label {
            display: block;
            margin-bottom: 5px;
        }

        .cancel-order-form-container input {
            width: calc(100% - 10px);
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .cancel-order-form-container button {
            background-color: #ff0000;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .cancel-order-form-container button:hover {
                background-color: #cc0000;
            }
</style>

<div class="content-wrapper">
    <div class="cancel-order-form-container">
        @using (Html.BeginForm("HuyDH", "DonHang", FormMethod.Post, new { @class = "cancel-order-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

        <div>
            <label for="MaDDH">Mã đơn:</label>
            <input type="text" name="MaDDH" class="lock" placeholder="Mã đơn" value="@ViewBag.MaDDH">
            
        </div>

            <div>
                <label for="LyDo">Lý do:</label>
                <input type="text" name="LyDo" class="lock" placeholder="Lý do">
            </div>

            <button type="submit">Hủy hóa đơn</button>
        }
    </div>
</div>