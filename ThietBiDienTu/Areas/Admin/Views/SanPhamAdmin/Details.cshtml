@model ThietBiDienTu.Areas.Admin.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>

    <div class="content-wrapper">
        <p>
            @Html.ActionLink("Quay về", "Index", null, new { @class = "btn btn-outline-primary btn-fw mdi mdi-backburger" })
        </p>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Xem chi tiết sản phẩm</h4>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header" style="background-color: #FFB6C1; width:550px ">
                                <h5 class="card-title mb-0">Thông tin sản phẩm</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-md-6">Tên sản phẩm:</label>
                                    <div class="col-md-6">
                                        <p class="form-control-static font-weight-bold d-block text-wrap" style="white-space: normal; word-wrap: break-word;">@Html.DisplayFor(model => model.TenSP)</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-md-6">Giá tiền:</label>
                                    <div class="col-md-6">
                                        <p class="form-control-static">@Html.DisplayFor(model => model.GiaTien)</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-md-6">Số lượng tồn kho:</label>
                                    <div class="col-md-6">
                                        <p class="form-control-static">@Html.DisplayFor(model => model.SoLuongTon)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-md-6">Danh mục:</label>
                                    <div class="col-md-6">
                                        <p class="form-control-static">@Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header" style="background-color: #FFB6C1; width: 550px ">
                                <h5 class="card-title mb-0">Thông số kỹ thuật</h5>
                            </div>
                            <div class="card-body">

                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <p class="form-control-static">@Html.Raw(Model.ThongSoKyThuat)</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-md-6">Ngày tạo:</label>
                                    <div class="col-md-6">
                                        <p class="form-control-static">@Html.DisplayFor(model => model.NgayTao)</p>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-md-6">Thời gian bảo hành:</label>
                                    <div class="col-md-6">
                                        <p class="form-control-static">@Html.DisplayFor(model => model.ThoiGianBaoHanh)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header" style="background-color: #FFB6C1; width: 550px">
                                <h5 class="card-title mb-0">Hình ảnh sản phẩm</h5>
                            </div>
                            <div class="card-body d-flex justify-content-center align-items-center">

                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhChinh)" class="card-img-top img-fluid rounded" alt="Hình ảnh chính">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--Mô tả-->
        <br />
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="card-header" style="background-color: #FFB6C1; width: 550px">
                                    <h5 class="card-title mb-0">Mô tả</h5>
                                </div>
                                <div class="col-sm-9">
                                    <div class="description-container">
                                        <p class="form-control-static">@Html.Raw(Model.MoTa)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="card-description">
                        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-outline-dark btn-fw mdi mdi-pencil-box" })
                    </p>
                </div>
            </div>

        </div>
        <!--/Mô tả-->
    </div>

</div>
<style>
    .description-container {
        max-width: 550px;
        margin: 0 auto; /* Center the container */
    }

    .card-img-top {
        max-height: 500px;
    }
</style>