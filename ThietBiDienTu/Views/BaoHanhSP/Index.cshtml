<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <!-- Include your local stylesheets -->
    <link rel="stylesheet" href="path/to/your-styles.css">
    <!-- Include Bootstrap CSS (downloaded locally) -->
    <link rel="stylesheet" href="path/to/bootstrap.min.css">
    <!-- Include jQuery (downloaded locally) -->
    <script src="path/to/jquery-3.3.1.slim.min.js"></script>
    <!-- Include Bootstrap JS (downloaded locally) -->
    <script src="path/to/popper.min.js"></script>
    <script src="path/to/bootstrap.min.js"></script>
</head>
<body>
    <style>
        .main-container {
            margin-top: 20px;
        }

        .product-container {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #fff; /* White background */
        }

            .product-container:hover {
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

        .product-image {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .product-details {
            text-align: left;
            color: #333;
        }

            .product-details h4 {
                margin-bottom: 15px;
            }

        .product-actions {
            margin-top: 10px;
        }

        .btn {
            border-radius: 4px;
            margin-right: 10px;
        }

        /* Custom colors for buttons */
        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-info {
            background-color: #17a2b8;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }
    </style>

    <div class="main-container">
        <div class="container">
            <a>@Html.ActionLink("Xem các yêu cầu", "YeuCauBH", null, new { @class = "btn btn-primary" })</a>
            <h2 class="text-center">Danh sách yêu cầu bảo hành</h2><hr />

            @foreach (var item in Model)
            {
                <div class="row product-container">
                    <div class="col-md-3">
                        <img src="~/Assets/img/@Html.DisplayFor(modelItem => item.LinkHinhAnhChinh)" alt="Product Image" class="product-image" />
                    </div>
                    <div class="col-md-9 product-details">
                        <h4 style="color:#ff6a00">@Html.DisplayFor(modelItem => item.TenSP)</h4>
                        <p><strong>Ngày đặt:   </strong> @Html.DisplayFor(modelItem => item.NgayDH)</p>
                        <p><strong>Thời gian bảo hành:</strong> @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)</p>
                        <p><strong>Chính sách bảo hành:</strong> @Html.DisplayFor(modelItem => item.ChinhSachBaoHanh)</p>
                        <p><strong>Tên khách hàng:</strong> @Html.DisplayFor(modelItem => item.TenKH)</p>
                        <p><strong>Số điện thoại:</strong> @Html.DisplayFor(modelItem => item.SDT)</p>
                        <span style="font-weight: bold;">Trạng Thái:</span>
                        @if (item.TrangThai == 1)
                        {
                            <span style="color: green; font-weight: bold;">Còn thời gian bảo hành</span>
                        }
                        else if (item.TrangThai == 2)
                        {
                            <span style="color: orange; font-weight: bold;">Chờ xác nhận</span>
                        }
                        else if (item.TrangThai == 3)
                        {
                            <span style="color: #DC143C; font-weight: bold;">Hết hạn bảo hành</span>
                        }
                        else if (item.TrangThai == 4)
                        {
                            <span style="color: #DC143C; font-weight: bold;">Đang ở yêu cầu bảo hành</span>
                        }

                        <div class="product-actions">
                            @Html.ActionLink("Xem chi tiết", "XemChiTietBaoHanh", new { MaBH = item.MaBH }, new { @class = "btn btn-primary" })
                            @*@Html.ActionLink("Details", "Details", new { id = item.MaBH }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaBH }, new { @class = "btn btn-danger" })*@
                        </div>
                    </div>
                </div>
            }
        </div>
        
    </div>
</body>
</html>
