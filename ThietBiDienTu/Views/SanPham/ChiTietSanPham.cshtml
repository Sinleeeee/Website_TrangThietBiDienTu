@model ThietBiDienTu.Areas.Admin.Models.SanPhamViewModels
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

<html>
<body>
    @using (Html.BeginForm("ChiTietSanPham", "SanPham", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true)
        <!-- SECTION -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- Product main img -->
                    <div class="col-md-5 col-md-push-2">
                        <div id="product-main-img">
                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhChinh)" alt="">
                            </div>

                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhPhu1)" alt="">
                            </div>

                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhPhu2)" alt="">
                            </div>

                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhPhu3)" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- /Product main img -->
                    <!-- Product thumb imgs -->
                    <div class="col-md-2  col-md-pull-5">
                        <div id="product-imgs">
                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhChinh)" alt="">
                            </div>

                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhPhu1)" alt="">
                            </div>

                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhPhu2)" alt="">
                            </div>

                            <div class="product-preview">
                                <img src="~/Assets/img/@Html.DisplayFor(model => model.HinhAnh.LinkHinhAnhPhu3)" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- /Product thumb imgs -->
                    <!-- Product details -->
                    <div class="col-md-5">
                        <div class="product-details">
                            <h2 class="product-name">@Html.DisplayFor(model => model.SanPham.TenSP)</h2>
                            <div>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <a class="review-link" href="#">@Html.DisplayFor(model => model.SanPham.SoLuongDaBanRa) đã bán</a>
                            </div>
                            <div>
                                <h3 class="product-price">@String.Format("{0:0,0}", Model.SanPham.GiaTien) đ<del class="product-old-price"> </del></h3>
                                <span class="product-available">Còn hàng</span>
                            </div>


                            <div class="product-options">
                                <label>
                                    Danh mục:
                                    @Model.SanPham.DanhMuc.TenDanhMuc
                                </label>
                                @*<label>
                Màu
                <select class="input-select">
                    <option value="0">Đỏ</option>
                    <option value="1">Đen</option>
                </select>
            </label>*@
                            </div>

                            <div class="add-to-cart">
                                <div class="qty-label">
                                    Hãng:
                                    @Model.SanPham.HangSanXuat.TenHang
                                </div>
                                <div class="add-to-cart">
                                    @if (Session["TaiKhoan"] == null)
                                    {
                                        <button class="add-to-cart-btn" disabled>
                                            <i class="fa fa-shopping-cart"></i> Bạn cần đăng nhập để mua !
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="add-to-cart-btn"
                                                onclick="AddToCart(@Html.DisplayFor(model => model.SanPham.MaSP))">
                                            <i class="fa fa-shopping-cart"></i> Thêm vào giỏ hàng
                                        </button>
                                    }

                                </div>

                                <script>
                                    function AddToCart(productId) {
                                        $.ajax({
                                            url: "/SanPham/ThemSPVaoGio",
                                            method: "POST",
                                            data: { productId: productId }
                                        })
                                            .done(function (msg) {
                                                alert("Thêm thành công");
                                                location.reload();
                                            });
                                    }
                                </script>
                            </div>





                            <ul class="product-btns">
                                <li><a href="#"><i class="fa fa-heart-o"></i>Thêm yêu thích</a></li>
                                <li><a href="#"><i class="fa fa-exchange"></i> So sánh</a></li>
                            </ul>

                            <ul class="product-links">
                                <li>Phụ kiện</li>
                                <li><a href="#">Phụ kiện chính hãng</a></li>
                                <li><a href="#">Phụ kiện khác</a></li>
                            </ul>

                            <ul class="product-links">
                                <li>Chia sẽ:</li>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                            </ul>

                        </div>
                    </div>
                    <!-- /Product details -->
                    <!-- Product tab -->
                    <div class="col-md-12">
                        <div id="product-tab">
                            <!-- product tab nav -->
                            <ul class="tab-nav">
                                <li class="active"><a data-toggle="tab" href="#tab1">Giới thiệu</a></li>
                                <li><a data-toggle="tab" href="#tab2">Cấu hình</a></li>
                                <li><a data-toggle="tab" href="#tab3">Đánh giá (@ViewBag.sl)</a></li>
                            </ul>
                            <!-- /product tab nav -->
                            <!-- product tab content -->
                            <div class="tab-content">
                                <!-- tab1  -->
                                <div id="tab1" class="tab-pane fade in active">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <span>@Html.DisplayFor(model => model.SanPham.TenSP)</span>
                                            <p>

                                                @Html.Raw(Model.SanPham.MoTa)

                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- /tab1  -->
                                <!-- tab2  -->
                                <div id="tab2" class="tab-pane fade in">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <p>
                                                @Html.Raw(Model.SanPham.ThongSoKyThuat)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- /tab2  -->
                                <!-- tab3  -->
                                <div id="tab3" class="tab-pane fade in">
                                    <div class="row">
                                        <!-- Rating -->
                                        <!-- /Rating -->
                                        <!-- Reviews -->

                                        <div class="col-md-6">
                                            <div id="reviews">
                                                <ul class="reviews">
                                                    @if (Model.DanhGias != null && Model.DanhGias.Any())
                                                    {
                                                        foreach (var danhGia in Model.DanhGias)
                                                        {


                                                            <li>
                                                                <div class="review-heading">
                                                                    <h5 class="name">@danhGia.TenKH</h5>
                                                                    <p class="date">@danhGia.NgayDanhGia</p>
                                                                    <div class="review-rating">
                                                                        @for (int i = 1; i <= 5; i++)
                                                                        {
                                                                            if (i <= danhGia.Sosaodanhgia)
                                                                            {
                                                                                <i class="fa fa-star"></i>
                                                                            }
                                                                            else
                                                                            {
                                                                                <i class="fa fa-star-o"></i>
                                                                            }
                                                                        }
                                                                    </div>
                                                                </div>
                                                                <div class="review-body">
                                                                    <p>@danhGia.NoiDungDanhGia</p>
                                                                </div>
                                                            </li>


                                                        }
                                                    }
                                                    else
                                                    {
                                                        <p>Chưa có đánh giá cho sản phẩm này.</p>
                                                    }


                                                </ul>
                                               
                                            </div>
                                        </div>
                                        <!-- /Reviews -->
                                        <!-- Review Form -->


                                        <div class="col-md-3">
                                            <div id="review-form">

                                                <form class="review-form">
                                                    @if (Session["TaiKhoan"] != null)
                                                    {

                                                        <div class="form-group">
                                                            <label for="noiDung">Nội dung đánh giá:</label>
                                                            <textarea class="form-control" name="noiDung" required></textarea>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="soSao">Số sao:</label>
                                                            <input type="number" class="form-control" name="soSao" min="1" max="5" required>
                                                        </div>

                                                        <input type="hidden" name="maSP" value="@Model.SanPham.MaSP" />

                                                        <button type="submit" class="primary-btn">Đánh giá</button>


                                                    }
                                                    else
                                                    {
                                                        <p>Vui lòng đăng nhập để đánh giá sản phẩm.</p>
                                                    }
                                                </form>
                                            </div>
                                        </div>
                                        <!-- /Review Form -->
                                    </div>
                                </div>
                                <!-- /tab3  -->
                            </div>
                            <!-- /product tab content  -->
                        </div>
                    </div>
                    <!-- /product tab -->
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /SECTION -->
        <!-- Section -->
        <div class="section">
            <!-- container -->
            <div class="container">
                <!-- row -->
                @Html.Action("SpLienQuan", "SanPham")
                <!-- /row -->
            </div>
            <!-- /container -->
        </div>
        <!-- /Section -->

    }
</body>
</html>

