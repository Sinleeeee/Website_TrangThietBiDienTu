@model IEnumerable<ThietBiDienTu.Areas.Admin.Models.GetMaGiamGiaInfoForKhachHang_Result>

@{
    ViewBag.Title = "DSMaGG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ActionLink("Mua ngay", "GioHang", "GioHang")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenMGG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SLDaSuDung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayBatDau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayKetThuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TiLeGiam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThaiMaGiamGia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenMGG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLDaSuDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiLeGiam) %
            </td>
            <td>
                @if (item.TrangThaiMaGiamGia == 0)
                {
                    <span>Còn hiệu lực</span>
                }
                else if (item.TrangThaiMaGiamGia == 1)
                {
                    <span style="color: gray;">Đã sử dụng</span>
                }
                else if (item.TrangThaiMaGiamGia == 3)
                {
                    <span style="color: red;">Đã hết hạn</span>
                }
            </td>
            <td></td>
        </tr>
    }


</table>
