@model IEnumerable<ThietBiDienTu.Areas.Admin.Models.GetCustomerAddress_Result>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .menu-container {
        background-color: #ddd;
        padding: 10px;
        height: 150vh;
    }

    .list-group-item a {
        padding: 20px;
        font-size: 16px;
        text-decoration: none;
    }

    .form-container {
        background-color: #fff;
        padding: 20px;
        height: auto;
    }
</style>

@Html.AntiForgeryToken()
<div class="container">
    <div class="row">
        <div class="col-md-4 menu-container">
            <!-- Menu section -->
            <ul class="list-group">
                <li class="list-group-item"><a href="@Url.Action("Edit", "TKKhachHang", new { })">Thông tin của tôi</a></li>
                <li class="list-group-item"><a href="@Url.Action("DoiTT", "TKKhachHang", new { })">Đổi thông tin</a></li>
                <li class="list-group-item"><a href="@Url.Action("Index", "DiaChiKH", new { })">Địa chỉ</a></li>
                <li class="list-group-item"><a href="@Url.Action("Index", "DDHKH", new { })">Đơn mua</a></li>
                <li class="list-group-item"><a href="@Url.Action("DSMaGG", "TKKhachHang", new { })">Danh sách mgg đã lưu</a></li>
                <li class="list-group-item"> <a href="@Url.Action("DangNhap", "TrangChu", new { })">Đăng xuất</a></li>
            </ul>
        </div>
        <div class="col-md-8 form-container">

            @Html.ValidationSummary(true)

            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="card-title">Địa chỉ của tôi</h2><hr />
                    </div>
                    <div class="col-md-6">
                        @Html.ActionLink("Thêm mới địa chỉ", "ThemMoiDiaChi", "ThongTinDDH", null, new { style = "padding: 10px 20px; background-color: #ff0500; color: #fff; text-decoration: none; border-radius: 5px;" })

                    </div>

                </div>

            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Địa chỉ</th>
                        <th>Thiết lập mặc định</th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span style="font-size: 16px; font-weight: bold;">@item.TenNguoiNhan</span> | @item.SDTNguoiNhan
                                <br />@item.SoNha, @item.TenDuong, @item.PhuongXa, @item.QuanHuyen, @item.TinhThanh
                            </td>
                            <td>
                                @if (item.MacDinh == 1)
                                {
                                    <span style="color: green; font-weight: bold;">Mặc định</span>
                                }
                                else
                                {
                                    <span style="color: red; font-weight: bold;">Không mặc định</span>
                                }
                            </td>
                            <td>
                                @*@Html.ActionLink("Cập nhật", "Edit", new { id = item.MaCTDiaChi }, new { style = "color: #0066FF; text-decoration: none;" }) |

                                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaCTDiaChi }, new { style = "color: #FF3300; text-decoration: none;" })*@
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

</div>