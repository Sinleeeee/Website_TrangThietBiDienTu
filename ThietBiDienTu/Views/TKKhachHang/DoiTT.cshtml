@model ThietBiDienTu.Areas.Admin.Models.KhachHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .menu-container {
        background-color: #ddd;
        padding: 10px;
        height: 100vh;
    }

    .list-group-item a {
        padding: 20px;
        font-size: 16px;
        text-decoration: none;
    }

    .form-container {
        background-color: #fff;
        padding: 20px;
        height: 100vh;
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.MaKH)

    <div class="container">
        <div class="row">
            <div class="col-md-4 menu-container">
                <!-- Menu section -->
                <ul class="list-group">
                    <li class="list-group-item"><a href="@Url.Action("Edit", "TKKhachHang", new { })">Thông tin của tôi</a></li>
                    <li class="list-group-item"><a href="@Url.Action("DoiTT", "TKKhachHang", new { })">Đổi thông tin</a></li>
                    <li class="list-group-item"><a href="@Url.Action("Index", "DiaChiKH", new { })">Địa chỉ</a></li>
                    <li class="list-group-item"><a href="@Url.Action("Index", "DDHKH", new { })">Đơn mua</a></li>
                    <li class="list-group-item"><a href="@Url.Action("DSMaGG", "TKKhachHang", new { })">Danh sách mgg đã lưu</a></li>
                    <li class="list-group-item"> <a href="@Url.Action("DangNhap", "TrangChu", new { })">Đăng xuất</a></li>
                </ul>
            </div>

            <div class="col-md-8 form-container">
                <h4>Đổi thông tin</h4>
                <hr />
                <div class="col-md-12">
                    @Html.ValidationSummary(true)
                    
                    

                    
                    <div class="col-md-4" style="color:orangered">
                        @Html.ValidationSummary()
                    </div>

                    Nhập mật khẩu cũ
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.Password("mkCu", null, new { @class = "form-control", required = "required" })

                        </div>
                    </div>

                    <div class="form-group">
                            @Html.LabelFor(model => model.MKTKKH, "Mật khẩu mới", new { @class = "control-label col-md-2 custom-label" })
                            <div class="col-md-12">
                                @Html.PasswordFor(model => model.MKTKKH, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MKTKKH)
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, "Email mới", new { @class = "control-label col-md-2 custom-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SoDienThoaiKH, "Số điện thoại mới", new { @class = "control-label col-md-2 custom-label" })
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.SoDienThoaiKH, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SoDienThoaiKH)
                            </div>
                        </div>



                    <div class="form-group">

                        <div class="col-md-offset-2 col-md-10">
                            <br />
                            <input type="submit" value="Sửa" class="btn btn-primary btn-lg text-center" style="background-color: green; color: white;" />
                        </div>
                    </div>
                </div>
                
            </div>

        </div>
    </div>


}
