<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangGiaoHang</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            flex-wrap: wrap;
            gap: 20px;
        }

        .card {
            width: auto;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 16px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }
    </style>

</head>
<div class="container mt-5">
    <h2 class="text-center mb-4">Đang giao hàng</h2>
    <hr />

    <body>
        @foreach (var item in Model)
        {
            <div class="card" style="margin: 20px;">
                <p style=" font-weight: bold;">Ngày đặt: <span style="margin:10px;">@Html.DisplayFor(modelItem => item.NgayDat)</span></p>

                <p style=" font-weight: bold;">
                    Trạng thái đơn hàng:
                    @if (item.TrangThai == 1)
                    {
                        <span style="color: green; font-weight: bold;">Chờ xác nhận</span>
                    }
                    else if (item.TrangThai == 2)
                    {
                        <span style="color: orange; font-weight: bold;">Đang xử lý</span>
                    }
                    else if (item.TrangThai == 3)
                    {
                        <span style="color: blue; font-weight: bold;">Một trạng thái khác</span>
                    }
                </p>

                <p style=" font-weight: bold;">Tổng tiền: <span style="color: #ff0000; margin: 10px;"> @String.Format("{0:0,0}", item.ThanhTien) đ</span></p>
                <p style=" font-weight: bold;">Tên khách hàng:<span style="margin: 10px;">@Html.DisplayFor(modelItem => item.KhachHang.TenKH)</span></p>
                <p style=" font-weight: bold;">Đơn vị vận chuyển:<span style="margin:10px;">@Html.DisplayFor(modelItem => item.NhaVanChuyen.TenNVC)</span></p>
                <a href="@Url.Action("CTDangGiaoHang", new { idDDH = item.MaDDH })" class="action-link">
                    <div style="background-color: #007bff; color: #fff; padding: 10px; border-radius: 5px; text-align: center; cursor: pointer;">
                        Xem đơn đặt hàng
                    </div>
                </a>
            </div>
        }

    </body>
</div>
</html>