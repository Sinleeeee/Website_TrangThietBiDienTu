            @Html.LabelFor(model => model.LyDo, "Lý do", htmlAttributes: new { @style = "font-weight: bold; color: #495057;" })
            @Html.TextAreaFor(model => model.LyDo, new { @style = "width: 100%; box-sizing: border-box; padding: 8px; border: 1px solid #ced4da; border-radius: 4px;" })
            @Html.ValidationMessageFor(model => model.LyDo, "", new { @style = "color: #dc3545;" })
        </div>

        <button type="submit" style="background-color: #007bff; color: #fff; border: 1px solid #007bff; border-radius: 4px; padding: 10px 15px; cursor: pointer;">Gửi Yêu Cầu</button>
    }
</div>